<h1>Sign Up</h1>

<div class="container form-container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, class: "form-control form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: "form-label" %>
      <%= f.password_field :password_confirmation, class: "form-control form-input" %>
    </div>

    <div class="form-group">
      <%= f.submit "Sign up", class: "btn btn-success btn-lg w-100" %>
    </div>
  <% end %>

  <div class="mt-3 text-center">
    <%= link_to "Already have an account? Log in", new_user_session_path, class: "btn btn-secondary" %>
  </div>
</div>
