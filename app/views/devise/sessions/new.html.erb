<h1>Login</h1>

<div class="container form-container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, class: "form-control form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-input" %>
    </div>

    <div class="form-group">
      <%= f.submit "Log in", class: "btn btn-primary btn-lg w-100" %>
    </div>
  <% end %>

  <div class="mt-3 text-center">
    <%= link_to "Don't have an account? Sign up", new_user_registration_path, class: "btn btn-secondary" %>
  </div>
</div>
